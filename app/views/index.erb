<ul class="nav nav-tabs">
  <li class="active"><a href="#disk-stats" data-toggle="tab">Disk Stats</a></li>
  <li><a href="#system-stats" data-toggle="tab">System Stats</a></li>
</ul>

<div class="tab-content">
  <div class="row tab-pane active" id="disk-stats">
    <div class="col-12">
      <div class="progress" data-toggle="tooltip" title="5.5 TB" data-placement="right" style="width: 90%">
        <div data-toggle="tooltip" data-placement="bottom" title="2 TB Parity" class="progress-bar progress-bar-info" style="width: 36%"></div>
        <div data-toggle="tooltip" data-placement="bottom" title="1.56 TB Used" class="progress-bar" style="width: 34%;"></div>
      </div>

    </div>

    <div class="col-6">
      <ul class="list-group">
        <li class="list-group-item">
          <strong>5.50 TB</strong>
          <small class="text-muted">Array size</small>
        </li>
        <li class="list-group-item">
          <strong>2 TB</strong>
          <small class="text-muted">Parity size</small>
        </li>
      </ul>
    </div>
    <div class="col-6">
      <ul class="list-group">
        <li class="list-group-item">
          <strong>1.56 TB (45%)</strong>
          <small class="text-muted">Used space</small>
        </li>
        <li class="list-group-item">
          <strong>1.94 TB (55%)</strong>
          <small class="text-muted">Free space</small>
        </li>
      </ul>
    </div>
  </div>

  <div class="row tab-pane" id="system-stats">
    <div class="col-6">
      <div class="panel">
        <div class="panel-heading">Processor</div>
        [graph]
      </div>
    </div>
    <div class="col-6">
      <div class="panel">
        <div class="panel-heading">Memory</div>
        [graph]
      </div>
    </div>
    <div class="col-6">
      <div class="panel">
        <div class="panel-heading">Network</div>
        [graph]
      </div>
    </div>
    <div class="col-6">
      <div class="panel">
        <div class="panel-heading">Storage</div>
        [graph]
      </div>
    </div>
  </div>
</div>

