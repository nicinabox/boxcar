<div class="header row">
  <div class="col-md-6">
    <h2><%= @title %></h2>
  </div>
  <div class="col-md-6 text-right">
    <small class="text-muted">Checked yesterday with no errors</small>
    <a href="#" class="btn btn-primary btn-small">Check Parity</a>
  </div>
</div>

<table class="table table-striped">
  <tr>
    <th></th>
    <th>Device</th>
    <th>Temp</th>
    <th>Size</th>
    <th>Errors</th>
  </tr>

  <% @disks.each do |disk| %>
    <tr class="<%= "text-muted" unless disk.spinning? %>">
      <td>
        <%= state_icon(disk) %>
      </td>
      <td>
        <strong><%= disk.name %></strong> <%= formatted_device disk.device %><br>

        <small class="text-muted"><%= disk.id %></small>
      </td>
      <td><%= disk.temp %></td>
      <td><%= humanize_size disk.size %></td>
      <td><%= disk.numErrors %></td>
    </tr>

  <% end %>
</table>
